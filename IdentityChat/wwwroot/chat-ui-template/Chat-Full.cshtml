@{
    Layout = "~/Views/Shared/_ChatLayout.cshtml";
    ViewData["Title"] = "Sohbet";
}

<!-- Orijinal HTML yapısı -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<div class="container app">
  <div class="row app-one">
    <div class="col-sm-4 side">
      <!-- Sol panel: kullanıcı listesi (sabit) -->
      <div class="side-one">
        <div class="row heading">
          <div class="col-sm-3 heading-avatar">
            <div class="heading-avatar-icon">
              <img src="https://bootdey.com/img/Content/avatar/avatar1.png">
            </div>
          </div>
          <div class="col-sm-1 heading-dot pull-right">
            <i class="fa fa-ellipsis-v fa-2x pull-right" aria-hidden="true"></i>
          </div>
          <div class="col-sm-2 heading-compose pull-right">
            <i class="fa fa-comments fa-2x pull-right" aria-hidden="true"></i>
          </div>
        </div>
        <div class="row searchBox">
          <div class="col-sm-12 searchBox-inner">
            <div class="form-group has-feedback">
              <input id="searchText" type="text" class="form-control" placeholder="Ara">
              <span class="glyphicon glyphicon-search form-control-feedback"></span>
            </div>
          </div>
        </div>
        <div class="row sideBar">
          <!-- Kullanıcı listesi sabit -->
          @* Buraya dinamik kullanıcı listesi gelecektir *@
        </div>
      </div>
    </div>

    <div class="col-sm-8 conversation">
      <div class="row heading">
        <div class="col-sm-2 heading-avatar">
          <div class="heading-avatar-icon">
            <img src="https://bootdey.com/img/Content/avatar/avatar6.png">
          </div>
        </div>
        <div class="col-sm-8 heading-name">
          <a class="heading-name-meta">John Doe</a>
          <span class="heading-online">Online</span>
        </div>
        <div class="col-sm-1 heading-dot pull-right">
          <i class="fa fa-ellipsis-v fa-2x pull-right" aria-hidden="true"></i>
        </div>
      </div>

      <div class="row message" id="conversation">
        <div class="row message-body">
          <div class="col-sm-12 message-main-receiver">
            <div class="receiver">
              <div class="message-text">Merhaba!</div>
              <span class="message-time pull-right">12:01</span>
            </div>
          </div>
        </div>
        <div class="row message-body">
          <div class="col-sm-12 message-main-sender">
            <div class="sender">
              <div class="message-text">Nasılsın?</div>
              <span class="message-time pull-right">12:02</span>
            </div>
          </div>
        </div>
      </div>

      <div class="row reply">
        <form asp-action="SendMessage" method="post" class="w-100 d-flex">
          <div class="col-sm-10 reply-main">
            <textarea name="content" class="form-control" rows="1" placeholder="Mesaj yaz..."></textarea>
            <input type="hidden" name="receiverId" value="@ViewBag.ChatWithId" />
          </div>
          <div class="col-sm-2 reply-send text-center">
            <button type="submit" class="btn btn-success"><i class="fa fa-send"></i></button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
